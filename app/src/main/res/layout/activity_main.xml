<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_id_101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/dark_blue"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/text_view_id_102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_auth"
        android:textColor="@color/dark_slate_gray"
        android:textSize="16dp"

        app:layout_constraintStart_toStartOf="@+id/text_view_id_101"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_101" />

    <TextView
        android:id="@+id/text_view_id_103"
        android:layout_width="340dp"
        android:layout_height="105dp"
        android:text="@string/app_desc"
        android:textColor="@color/cornflower_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_102"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/buttonStartDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:onClick="onLaunchTabbedActivity"
        android:src="@drawable/ic_launcher_foreground"
        android:text="Continue to Demo"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_103" />

