    <Switch
        android:id="@+id/switch101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="onSwitch"
        android:showText="true"
        android:splitTrack="true"
        android:textOff="OFF"
        android:textOn="ON"
